@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Taschenrechner</h1>
    <form asp-page="/Index">
        <div class="form-group">
            <label asp-for="Input.operand1">Operand 1:</label>
            <input type="text" class="form-control" asp-for="Input.operand1" />
        </div>
        <div class="form-group">
            <label asp-for="Input.operand2">Operand 2:</label>
            <input type="text" class="form-control" asp-for="Input.operand2" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Operator">Operator:</label>
            <input type="text" class="form-control" asp-for="Input.Operator" />
        </div>
        <input type="submit" />
    </form>
    @if (!string.IsNullOrWhiteSpace(Model.Input.result))
    {
       <div class="m-3">
            Das Ergebnis ist @Model.Input.result
        </div>
    }
</div>
